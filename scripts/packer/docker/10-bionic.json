{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:bionic",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/packer/scripts/apt.sh",
        "scripts/packer/scripts/purge-extra-packages.sh",
        "scripts/packer/scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "registry.gitlab.com/consensus.enterprises/clients/hc/controlled-vocabulary/{{user `image_name`}}",
        "tag": "0.0.x"
      },
      {
        "type": "docker-tag",
        "repository": "registry.gitlab.com/consensus.enterprises/clients/hc/controlled-vocabulary/{{user `image_name`}}",
        "tag": "latest"
      },
      {
        "type": "docker-push"
      }
    ]
  ],
  "variables": {
    "image_name": "bionic"
  }
}
