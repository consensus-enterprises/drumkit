{
  "builders": [
    {
      "image": "{{user `repo_url`}}/docker:{{user `ubuntu_version`}}",
      "type": "docker",
      "privileged": "true",
      "commit": "true",
      "changes": [
        "USER ddev"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "repository": "{{user `repo_url`}}/{{user `image_name`}}",
        "tags": [
          "{{user `ubuntu_version`}}-{{user `ddev_version`}}-{{isotime `2006-01-02T03-04-05`}}",
          "{{user `ubuntu_version`}}-{{user `ddev_version`}}",
          "{{user `ubuntu_codename`}}-{{user `ddev_version`}}"
        ],
        "type": "docker-tag"
      },
      {
        "type": "docker-push",
        "login": "true",
        "login_server": "{{user `repo_url`}}",
        "login_username": "{{user `login_username`}}",
        "login_password": "{{user `login_password`}}"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/packer/scripts/ddev.sh",
        "scripts/packer/scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "image_name": "ddev",
    "ubuntu_version": "24.04",
    "ubuntu_codename": "noble",
    "ddev_version": "1.24.6",
    "repo_url": "{{env `CONTAINER_REGISTRY_URL`}}",
    "login_username": "{{env `CONTAINER_REGISTRY_USERNAME`}}",
    "login_password": "{{env `CONTAINER_REGISTRY_PASSWORD`}}"
  }
}
