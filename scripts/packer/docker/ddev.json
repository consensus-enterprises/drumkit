{
  "builders": [
    {
      "image": "{{user `repo_url`}}/docker:latest",
      "type": "docker",
      "privileged": "true",
      "commit": "true",
      "changes": [
        "USER ddev"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "repository": "{{user `repo_url`}}/{{user `image_name`}}",
        "tags": [
          "{{user `ubuntu_version`}}-1"
        ],
        "type": "docker-tag"
      },
      {
        "repository": "{{user `repo_url`}}/{{user `image_name`}}",
        "tags": [
          "latest"
        ],
        "type": "docker-tag"
      },
      {
        "type": "docker-push"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/packer/scripts/ddev.sh",
        "scripts/packer/scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "image_name": "ddev",
    "ubuntu_version": "24.04",
    "repo_url": "{{env `CONTAINER_REGISTRY_URL`}}"
  }
}
